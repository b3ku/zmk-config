#define combo(name, keypos, bindings)   \
  combo_##name {                        \
    timeout-ms = <50>;                  \
    key-positions = <keypos>;           \
    bindings = <bindings>;              \
};

combos {
    compatible = "zmk,combos";
    combo(et, 3 5, &kp LS(N6))
    combo(dollar, 8 14, &kp LS(N4))
};